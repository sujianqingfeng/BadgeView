<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin">

    <com.sujian.badgeview.BadgeView
        android:id="@+id/badgeview"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <com.sujian.badgeview.BadgeView
        android:id="@+id/badgeview1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:badge_textSize="10dp"/>

    <com.sujian.badgeview.BadgeImageView
        android:id="@+id/badge_ImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"/>

    <com.sujian.badgeview.BadgeImageView
        app:badge_textSize="10dp"
        android:id="@+id/badge_ImageView1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"/>


    <com.sujian.badgeview.BadgeRadioButton
        android:id="@+id/radio"
        android:gravity="center"
        android:drawableTop="@mipmap/ic_launcher"
        android:text="radio Buttion"
        android:button="@null"
        app:badge_horizotalMargin="24dp"
        android:background="@null"
        android:layout_width="100dp"
        android:layout_height="80dp"/>

    <com.sujian.badgeview.BadgeRadioButton
        android:id="@+id/radio1"
        android:gravity="center"
        app:badge_horizotalMargin="22dp"
        app:badge_textSize="10dp"
        android:drawableTop="@mipmap/ic_launcher"
        android:text="radio Buttion"
        android:button="@null"
        android:background="@null"
        android:layout_width="100dp"
        android:layout_height="80dp"/>
</LinearLayout>
